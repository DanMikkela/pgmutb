@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Cat_ShowResults</title>
@*    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">
*@    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <link href="~/content/site.css" rel="stylesheet" />
    <link href="~/site.css" rel="stylesheet" />
</head>
<body class="aaa">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <nav class="navbar-expand-sm navbar-light">
            <div class="container">
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a class="nav-link" asp-controller="Home"       asp-action="Index">Home</a></li>
                        <li><a class="nav-link"> </a></li>
                        <li><a class="nav-link" asp-controller="Cats"       asp-action="Index">Cats</a></li>
                        <li><a class="nav-link" asp-controller="Tickets"    asp-action="Index">Tickets</a></li>
                        <li><a class="nav-link" asp-controller="Results"    asp-action="Index">Results</a></li>
                        <li><a class="nav-link"> </a></li>
@if (SignInManager.IsSignedIn(User))
                    {
                        <li><a class="nav-link" asp-controller="Judges"     asp-action="Index">Judges</a></li>
                    }
                        <li><a class="nav-link"> </a></li>
@if (@User.IsInRole("Admin"))
                    {
                        <partial name="_AdminPartial" />
                    }
                        <li><a class="nav-link"> </a></li>
                        <li><a class="nav-link"> </a></li>
                        <partial name="_LoginPartial" />
@*                        <li><a class="nav-link" asp-controller="Home"       asp-action="Privacy">Policy</a></li>*@
                    </ul>
                </div>
            </div>
        </nav>
    </nav>
    <table width="100%">
        <tr>
            <td width="110" valign="top">
                <img alt="Min Kattklubb" src="~/Images/Min_logo100.gif" />
            </td>
            <td>
                <div>
                    @RenderBody()
                </div>
            </td>
        </tr>
    </table>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Min Kattklubb - @*<a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
