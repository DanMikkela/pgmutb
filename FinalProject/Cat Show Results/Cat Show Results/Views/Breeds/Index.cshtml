@model IEnumerable<Cat_Show_Results.Models.Breed>

@{
    ViewData["Title"] = "Breeds List";
}

<h4>Breeds List</h4>

@if (@User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <p>
        <a asp-controller="Systems" asp-action="Index">Back to Admin</a>
    </p> 
   }
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EMS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categories.CategoryId)
            </td>
            <td>
                <a asp-action="Edit"    asp-route-id="@item.BreedId">Edit</a>
@*                <a asp-action="Details" asp-route-id="@item.BreedId">Details</a>*@
                <a asp-action="Delete"  asp-route-id="@item.BreedId">Delete</a> 
                </td>
        </tr>
}
    </tbody>
</table>
