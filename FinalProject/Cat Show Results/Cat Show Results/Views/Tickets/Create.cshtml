@model Cat_Show_Results.Models.Ticket

@{
    ViewData["Title"] = "Create Ticket";
}
<h4>Create Ticket</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <input hidden asp-for="TicketId">
@*                <input asp-for="CatNumber">
*@            </div>
            <div class="form-group">
                Judge Name
                <select asp-for="JudgeName" asp-items="ViewBag.JudgeName" class="form-control"></select>
                <span asp-validation-for="JudgeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                Number
                <select asp-for="CatId" asp-items="ViewBag.CatId" class ="form-control"></select>
                <span asp-validation-for="CatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
