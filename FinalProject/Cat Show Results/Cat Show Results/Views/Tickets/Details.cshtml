        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">Head</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Head)
        </dd>
        <dt class = "col-sm-2">Eyes</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Eyes)
        </dd>
        <dt class = "col-sm-2">Ears</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ears)
        </dd>
        <dt class = "col-sm-2">Fur</dt>
