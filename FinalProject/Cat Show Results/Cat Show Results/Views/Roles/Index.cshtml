@model IEnumerable<Cat_Show_Results.Models.RoleViewModel>

@{
    ViewData["Title"] = "Roles";
}

<h4>Roles</h4>

<p>
    <a asp-action="Create">Create New Role</a>
</p>
<p>
    <a asp-controller="Systems" asp-action="Index">Back to Admin</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Users
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.Users == null || item.NoOfRoleUsers == 0)
                {
                    @Html.Raw("No users")
                }
                else@* if (item.NoOfRoleUsers == 1)
                {
                    @Html.DisplayFor(modelItem => item.Users[0].UserName)
                }
                else*@
                {
                    @Html.DisplayFor(modelItem => item.NoOfRoleUsers)
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>
