@model Cat_Show_Results.Models.RoleViewModel

@{
    ViewData["Title"] = "RoleDetails";
}

<h4>Role User List : @Model.Name</h4>

<div>
    <hr />
    <dl class="row">
        @Model.NoOfRoleUsers
        @if (Model.NoOfRoleUsers == 0)
            { 
                <dd class="col-sm-10">No Users</dd>
            }
        else
            {
            @for (int i = 0; i < Model.Users.Count(); i++)
                {
                    @if (Model.Users[i].HasRole)
                    {
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Users[i].UserName)
                        </dd>
                    }
                }
            }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
