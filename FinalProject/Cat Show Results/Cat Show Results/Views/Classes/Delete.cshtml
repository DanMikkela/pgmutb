@model Cat_Show_Results.Models.Class

@{
    ViewData["Title"] = "Delete Class";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Class</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Class Number</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClassNumber)
        </dd>
        <dt class = "col-sm-2">Class Name</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClassName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ClassId" />
        <input type="submit" value="Delete" class="btn btn-danger" style="font-size:10px" />
        <div> </div>
        <a asp-action="Index">Back to List</a>
    </form>
</div>
