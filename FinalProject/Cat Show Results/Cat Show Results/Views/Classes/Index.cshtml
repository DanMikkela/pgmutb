@model IEnumerable<Cat_Show_Results.Models.Class>

@{
    ViewData["Title"] = "Classes List";
}
<h4>Classes List</h4>
@if (@User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <p>
        <a asp-controller="Systems" asp-action="Index">Back to Admin</a>
    </p> 
   }
<table class="table">
    <thead>
        <tr>
            <th>Class Number</th>
            <th>Class Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClassNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassName)
            </td>
            <td>
                <a asp-action="Edit"    asp-route-id="@item.ClassId">Edit</a>
@*                <a asp-action="Details" asp-route-id="@item.ClassId">Details</a>*@
@if (@User.IsInRole("Admin"))
            {   <a asp-action="Delete"  asp-route-id="@item.ClassId">Delete</a>  }
            </td>
        </tr>
}
    </tbody>
</table>
